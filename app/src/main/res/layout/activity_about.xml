<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.example.andre.slotmachine.AboutActivity"
    android:background="@drawable/background_menu">
    <include layout="@layout/header_about"/>
    <include layout="@layout/footer_menu_principal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/headerAbout"
        android:text="@string/gameName"
        android:id="@+id/tvAbout"
        android:gravity="center"/>
    <ImageView
        android:layout_width="@dimen/logoWidth"
        android:layout_height="@dimen/logoWidth"
        android:layout_below="@id/tvAbout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:textColor="@color/btText"
        android:background="@drawable/custom_button"
        android:id="@+id/btVoltar"
        android:onClick="voltar"
        android:text="@string/voltar"/>
</RelativeLayout>
