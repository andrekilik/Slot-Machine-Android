<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/btColor1" />
            <stroke
                android:width="@dimen/btStrokeWidth"
                android:color="@color/btColor2" />
            <corners
                android:radius="@dimen/btCornerRadius" />
            <padding
                android:left="@dimen/btPadding"
                android:top="@dimen/btPadding"
                android:right="@dimen/btPadding"
                android:bottom="@dimen/btPadding" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/btColor1"
                android:endColor="@color/btColor2"
                android:angle="270" />
            <stroke
                android:width="@dimen/btGrStrokeWidth"
                android:color="@color/btColor2" />
            <corners
                android:radius="@dimen/btGradientCornerRadius" />
            <padding
                android:left="@dimen/btPadding"
                android:top="@dimen/btPadding"
                android:right="@dimen/btPadding"
                android:bottom="@dimen/btPadding"/>
        </shape>
    </item>
</selector>